{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source" : "**/*.@(json)",
        "headers" : [ {
            "key" : "Access-Control-Allow-Origin",
            "value" : "*"
          }
        ]
      }
    ]
  }
}
